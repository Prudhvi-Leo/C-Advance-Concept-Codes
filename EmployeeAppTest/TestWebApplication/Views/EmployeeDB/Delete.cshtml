@model TestWebApplication.Models.EmployeeDB

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>EmployeeDB</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Model.Email
        </dd>
        <dt class = "col-sm-2">
            Position
        </dt>
        <dd class = "col-sm-10">
            @Model.Position
        </dd>
        <dt class = "col-sm-2">
            Department
        </dt>
        <dd class = "col-sm-10">
            @Model.Department.DepartmentId
        </dd>
    </dl>
    
    <form action="/EmployeeDB/Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.EmployeeDBId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="/EmployeeDB/Index">Back to List</a>
    </form>
</div>
